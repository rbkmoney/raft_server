{erl_opts, [

    % mandatory
    debug_info,
    % warnings_as_errors,
    warn_export_all,
    warn_missing_spec,
    warn_untyped_record,
    warn_export_vars,

    % by default
    warn_unused_record,
    warn_bif_clash,
    warn_obsolete_guard,
    warn_unused_vars,
    warn_shadow_vars,
    warn_unused_import,
    warn_unused_function,
    warn_deprecated_function,

    % at will
    % bin_opt_info
    % no_auto_import,
    warn_missing_spec_all,

    % inet_sctp.hrl has records with untyped fields
    nowarn_untyped_record
]}.

{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    deprecated_functions_calls,
    deprecated_functions
]}.
{xref_warnings, true}.
{cover_enabled, true}.

{dialyzer, [
    {warnings, [
        % mandatory
        unmatched_returns,
        error_handling,
        race_conditions,
        unknown
    ]},
    {plt_apps, all_deps}
]}.

{deps, [
    {genlib , {git, "https://github.com/rbkmoney/genlib.git"    , {branch, master}}}
    % {msgpack, {git, "git@github.com:rbkmoney/msgpack-erlang.git", {branch, master}}}
]}.
